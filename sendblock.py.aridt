from getblock import readblock, ReadBlocks
from screen import Stuff
from collections import OrderedDict
import socket, sys, os, timelyOSC

def OSC(stroke):
    bufsize = $(consumer bufsize)
    port = $(consumer port)
    readblocks = ReadBlocks(stroke)
    n = 1
    while True:
        chunks = [timelyOSC.Message('/lc', [text]).ser() for text in readblocks(n)]
        if not chunks:
            return # Nothing to send.
        if max(len(chunk) for chunk in chunks) <= bufsize:
            break
        n *= 2
    sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM) # XXX: Close it?
    for chunk in chunks:
        sock.sendto(chunk, ('localhost', port))

def stuff(stroke):
    Stuff(session, window, doublequotekey)(readblock(stroke))

def main():
    _, stroke = (sys.argv.pop(1) for _ in range(2))
    globals()[interface](stroke)

interface = $"$(consumer interface)
session = $"$(sessionName) # TODO LATER: Support more than one session.
window = $"$(consumer windowName)
doublequotekey = $"$(doubleQuoteKey)

if '__main__' == __name__:
    main()
